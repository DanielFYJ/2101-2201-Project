@startuml
actor Kid
participant "//<<boundary>>// \n **QueueUI**" as A
participant "//<<control>>//\n**QueueManagement**" as B
participant "//<<entity>>//\n**Queue**" as C

Kid -> A:add action
activate A #FFBBBB

A -> B: AddtoQueue()
activate B #FFBBBB

alt Success in Adding Action to Queue
B -> C: UpdateQueue()
activate C #FFBBBB
C --> B: Success()
deactivate C

B --> A: Success()
deactivate B 

A -> Kid: Success()
deactivate A

else Failure in Adding Action to Queue
Kid -> A:add action
activate A #FFBBBB

A -> B: AddtoQueue()
activate B #FFBBBB

B --> A: Failure()
deactivate B

A -> Kid: Failure()
deactivate A
end
@enduml