@startuml
skinparam sequenceArrowThickness 2
skinparam roundcorner 20
skinparam maxmessagesize 200
actor "Kid" as kid
participant "//<<Entity>>//\n**WebPortal**" as WebPortal
participant "//<<Control>>//\n**RoboticCarManagement**" as RoboticCarManagement
participant "//<<Control>>//\n**MovementManagement**" as B
participant "//<<Entity>>//\n**MotorDriver**" as C
actor "RobticCar" as RC 
kid -> WebPortal : "Submit stop command"
activate WebPortal #FFBBBB
WebPortal -> RoboticCarManagement : sendStopCommand()
activate RoboticCarManagement #FFBBBB
RoboticCarManagement -> B : receiveStopCommand()

activate B #FFBBBB
B-> C : stop()
activate C #FFBBBB
C -> RC : "Car stop successfully"
C --> B : Success()
deactivate C
B --> RoboticCarManagement: Success()
deactivate B
RoboticCarManagement --> WebPortal: sendStatus()
deactivate RoboticCarManagement
WebPortal -> kid : "Stop command executed successfully"
deactivate WebPortal
@enduml